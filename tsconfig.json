{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "experimentalDecorators": true,
      "lib": ["es2017","es6","es7"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "noImplicitAny": false,
      "strictNullChecks": false,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true
    },
    "exclude": ["node_modules","dist"],
}